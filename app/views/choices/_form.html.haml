- choice = f.object
.row
  .col-md-9
    = f.input :title, label: false
  .col-md-3
    = link_to "+", new_blank_choices_path(question_id: choice.question.id, after_order_index: choice.order_index), class: 'btn btn-sm btn-success submit-before-redirect'
    = link_to "^", move_up_choice_path(choice), method: :put, class: 'btn btn-sm btn-info submit-before-redirect'
    = link_to "v", move_down_choice_path(choice), method: :put, class: 'btn btn-sm btn-info submit-before-redirect'
    = link_to "-", delete_choice_path(choice), method: :delete, class: 'btn btn-sm btn-danger submit-before-redirect'
