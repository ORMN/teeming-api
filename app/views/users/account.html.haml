%h2 Account

%h3 Change your email

= semantic_form_for @user, url: update_email_user_path(current_user), method: :put do |f|
  = f.input :email
  = f.submit "Update Email", class: 'btn btn-sm btn-primary btn-with-padding'

%h3 Change your password

= semantic_form_for @user, url: update_email_user_path(current_user), method: :put do |f|
  = f.input :password, as: :password
  = f.input :password_confirmation, as: :password
  = f.submit "Update Password", class: 'btn btn-sm btn-primary btn-with-padding'

%h3 Delete your account

= link_to "Delete this account", user_path(current_user), method: :delete, class: 'btn btn-sm btn-danger btn-with-padding', data: {confirm: 'Are you sure? This cannot be undone!'}
