= render partial: 'step_title', locals: { step_title: 'Setup Your Member Details', step_sub_title: 'Setup your personal details' }

= render partial: 'shared/privacy_policy_notice'

= semantic_form_for @user do |f|
  = f.semantic_fields_for :member do |ff|
    = ff.hidden_field :id
    = ff.hidden_field :with_user_input
    = render partial: 'members/user_details', locals: { f: ff }
    = f.submit 'Cancel', class: 'btn btn-sm btm-info btn-with-padding', hint: 'You must go through all the setup steps to vote OurRevolutionMN elections'
    = f.submit 'Next Step', class: 'btn btn-sm btn-primary btn-with-padding'
