%table.table
  %thead
    %tr.row
      %th Name
      %th Action
  %tbody
    - questionnaires.each do |questionnaire|
      %tr.row
        %td= link_to questionnaire.name, questionnaire
        %td
          - if policy(questionnaire).edit?
            = link_to 'Edit', edit_questionnaire_path(questionnaire), class: 'btn btn-sm btn-success'
          - if policy(questionnaire).destroy?
            = link_to 'Delete', questionnaire_path(questionnaire), method: :delete, class: 'btn btn-sm btn-danger', data: {confirm: 'Are you sure?'}
          - if !policy(questionnaire).edit? && !policy(questionnaire).destroy?
            = link_to 'View', questionnaire_path(questionnaire), class: 'btn btn-sm btn-info'
