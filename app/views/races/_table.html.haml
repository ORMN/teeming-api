%table.table
  - if election.internal?
    %thead
      %tr.row
        %th Name
        %th Action
    %tbody
      - races.each do |race|
        %tr.row
          %td= link_to race.complete_name, race
          %td
            = link_to 'Edit', edit_race_path(race), class: 'btn btn-sm btn-success'
            = link_to 'Delete', race_path(race), method: :delete, class: 'btn btn-sm btn-danger'
  - else
    %thead
      %tr.row
        %th Locale
        %th Level of government
        %th Action
    %tbody
      - races.each do |race|
        %tr.row
          %td= link_to race.type_and_locale, race
          %td= Race::LEVEL_OF_GOVERNMENT_TYPES.invert[race.level_of_government]
          %td
            = link_to 'Edit', edit_race_path(race), class: 'btn btn-sm btn-success'
            = link_to 'Delete', race_path(race), method: :delete, class: 'btn btn-sm btn-danger'
