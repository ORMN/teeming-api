- events.each do |event|
  = render partial: 'events/show', locals: {event: event, show_description: false, show_rsvp: true, show_stats: show_stats, event_rsvp: user.event_rsvps.where(event: event).first}

- if policy(Event).new?
  = link_to "New Event", new_chapter_event_path(Chapter.find(1)), class: 'btn btn-sm btn-success'

